@model ICollection<DoctorGetDTO>
<div class="container-fluid">
	<h1 class="h3 text-gray-800 mb-3">Example</h1>
	<div class="mb-4">
		<a asp-action="Create" asp-controller="Doctor" asp-area="Admin" class="btn btn-success">
			<i class="fas fa-plus"></i> Create
		</a>
	</div>
	<div class="card shadow mb-4">
		<div class="card-header py-3">
			<h6 class="m-0 font-weight-bold text-primary">Doctor Table</h6>
		</div>
		<div class="card-body">
			<div class="table-responsive">
				<table class="table table-hover table-striped" id="dataTable" width="100%" cellspacing="0">
					<thead class="thead-dark">
						<tr>
							<th>Id</th>
							<th>Image</th>
							<th>Name</th>
							<th>DepartmentId</th>							
							<th class="text-center">Actions</th>
						</tr>
					</thead>
					<tbody>
						@foreach (DoctorGetDTO b in Model)
						{
							<tr>
								<td>@b.Id</td>
								<td class="text-center">
									<img class="img-thumbnail rounded" width="50" src="/Images/Doctors/@b.ImagePath" />
								</td>

								<td>@b.Name</td>
								<td>@b.DepartmentId</td>
								
								<td class="text-center">
									<a class="btn btn-warning btn-sm mx-1">
										<i  class="fas fa-edit"></i> Update
									</a>
									<a asp-action="Delete" class="btn btn-danger btn-sm mx-1">
										<i class="fas fa-trash"></i> Delete
									</a>
								</td>
							</tr>
						}
					</tbody>
				</table>
			</div>
		</div>
	</div>
</div>

